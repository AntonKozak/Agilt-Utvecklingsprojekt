<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" type="text/css" href="/css/registration-page.css">
</head>
<body>
    <div class="container">
        <h2>Registration</h2>
        <form action="" method="post">
            <div>
                <label for="username">Username:</label>
                <input type="text" id="username" name="username" required class="input-field">
            </div>
            <div>
                <label for="email">Email:</label>
                <input type="email" id="email" name="email" required class="input-field">
            </div>
            <div>
                <label for="password">Password:</label>
                <input type="password" id="password" name="password" required class="input-field">
            </div>
            <div>
                <label for="confirm_password">Confirm Password:</label>
                <input type="password" id="confirm_password" name="confirm_password" required class="input-field">
            </div>
            <div>
                <input type="submit" value="Register" class="submit-button">
            </div>
        </form>
    </div>
    <hr>
    @Html.ActionLink("Log In", "Index", "Home", new { @class = "custom-link" }) 
    <br>
    @Html.ActionLink("Continue without registration", "Index", "Events", new { @class = "custom-link" })
</body>
</html>